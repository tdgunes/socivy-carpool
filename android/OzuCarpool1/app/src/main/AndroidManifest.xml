<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socivy.ozucarpool"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

  
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.socivy.ozucarpool.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.socivy.ozucarpool.permission.C2D_MESSAGE" />
	<uses-permission android:name="android.permission.C2D_MESSAGE" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service android:name=".GcmIntentService" />
        

        <activity
            android:name="com.socivy.ozucarpool.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.AddRouteActivity"
            android:label="@string/title_activity_add_route" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.AddRouteMapActivity"
            android:label="@string/title_activity_add_route_map"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.ForgotPassActivity"
            android:label="@string/title_activity_forgot_pass" >
        </activity>
        <activity
            android:name="com.socivy.ozucarpool.FindRouteActivity"
            android:label="@string/title_activity_find_route"
            android:theme="@style/AppBaseTheme" >
        </activity>
    </application>

</manifest>
